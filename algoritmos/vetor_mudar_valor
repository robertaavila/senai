programa

{
	inteiro vNumero[10]
	inteiro i = 1
	inteiro j = 1
	funcao inicio()

	{
		para(i=0;i<10;i++){
			escreva("Insira um número: ")
			leia(vNumero[i])
		}	
		escreva("\nOs números inseridos foram: ")
		para(i=1;i<10;i++){		
			escreva(vNumero[i] + ", ")	
		}
		escreva("\nO vetor invertido é: ")
		para(i=1;i<5;i++){
			j = 10 - i		
			vNumero[i] = vNumero[j]
			escreva(vNumero[j])	
		}
	}
}
